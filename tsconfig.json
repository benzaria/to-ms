{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./out",
        "moduleResolution": "node",
        "moduleDetection": "force",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "noEmitOnError": true,
        "isolatedModules": true,
        "esModuleInterop": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*.ts",
        "types/**/*.d.ts",
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}